<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    
    <title>Application</title>
    <script>
        document.addEventListener("DOMContentLoaded", ()=>{
            const form = document.querySelector("form")
            form.addEventListener("submit", (event)=>{
                const confirmation = confirm("Are you sure you want to submit your application?\nYou will not be able to change your information once submitted.");
                if(!confirmation){
                    event.preventDefault();
                }
            });
        });
    </script>
</head>
<body>
    <h1>Application</h1>
    <fieldset>
        <legend></legend>
    <form action = "/apply" method="POST" id="Photo_form">
        
        <label><b>Name:</b></label>
        <input type="text" id="name" name="name">
        <label><b>Email Address:</b></label>
        <input type="type" id="email" name="email">
        <br>
        <br>
        <label><b>GPA:</b></label>
        <input type="text" id="gpa" name="gpa">
        <br><br>
        <label><b>Background Information</b></label>
                <br>
                <textarea name = "info" rows="10" cols="55"></textarea>
                <br>
        <button id="reset" type="reset">Reset</button>
        <button id="submitApplication" type="submit">
            SubmitApplication
        </button>
    </form>
</fieldset>
<hr>
    <a href="/">HOME</a>

</body>
</html>